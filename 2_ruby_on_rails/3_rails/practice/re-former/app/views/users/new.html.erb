<%= form_with model: @user do |form|%>
  <div>
    <%=form.label :username%><br>
    <%= form.text_field :username, :value => "user"%>
  </div>
  <div>
    <%=form.label :email%><br>
    <%= form.email_field :email,  :value => "email@domain.com"%>
  </div>
  <div>
    <%=form.label :password%><br>
    <%= form.password_field :password, :value => "password"%>
  </div>
  <div>
    <%= form.submit "Create"%>
  </div>
<% end %>
