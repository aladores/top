 <%= form_with url:"/flights", method: :get do |form|%>
  <div class = "flight-inputs">
    <div>
      <%= form.label :departure_airport_id, "Departure flight: " %>
      <%= form.select(:departure_airport_id, options_for_select(@airport_options))%>
      <%= form.label :arrival_airport_id, "Arrival flight: " %>
      <%= form.select(:arrival_airport_id, options_for_select(@airport_options))%>
    </div>
    <div>
      <%= form.label :flight_date,"Date" %>
      <%= form.select(:flight_date, options_for_select(@flight_start_options))%>
    </div>
    <div>
      <%= form.label("Passengers") %>
      <%= form.select(:passenger_count, options_for_select([1, 2, 3, 4], params[:passenger_count]))%>
    </div>
    <%= form.submit "Search", name:nil, class:'form-button' %>
  </div>
  <div>
  <%end%>
