<h1>Login page</h1>
<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>
<%= form_for(:session, url:"#create") do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
    <% if flash[:danger] %>
      <%= flash[:danger] %>
    <% end %>
  </div>
  <div>
    <br>
    <%= form.submit "Log in"%>
  </div>
<% end %>
